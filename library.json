{
  "name": "FunctionGenerator",
  "version": "1.0.0",
  "description": "A lightweight FreeRTOS-based Function Generator class for ESP32 that runs waveform generation in a background task.",
  "keywords": [
    "function generator",
    "waveform",
    "sine",
    "square",
    "triangle",
    "ESP32",
    "FreeRTOS"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Aliasthethird/FunctionGenerator.git"
  },
  "authors": [
    {
      "name": "Gero Nootz",
      "email": "gero@nootz.de",
      "maintainer": true,
      "url": "https://github.com/Aliasthethird"
    }
  ],
  "license": "MIT",
  "frameworks": [
    "arduino"
  ],
  "platforms": [
    "espressif32"
  ],
  "dependencies": [],
  "build": {
    "flags": [
      "-Wall",
      "-Wextra"
    ],
    "srcFilter": [
      "+<*>",
      "-<examples>"
    ]
  },
  "examples": [
    {
      "name": "Basic usage",
      "base": "examples/",
      "files": [
        "FunctionGenerator_example.cpp"
      ]
    }
  ],
  "export": {
    "exclude": [
      ".github",
      ".vscode",
      "test",
      "docs"
    ]
  },
  "releaseNotes": "Initial release: Implements background waveform generation task with configurable amplitude, offset, and period."
}